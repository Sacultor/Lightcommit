# 环境变量示例文件
# 复制此文件为 .env 并填入实际值

# Database Configuration (Supabase)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Alternative Database Configuration (if not using DATABASE_URL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name

# Hardhat 网络配置
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_PRIVATE_KEY=your_private_key_here

# 可选：其他网络配置
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_PRIVATE_KEY=your_mainnet_private_key_here

# 前端配置（如果需要）
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_APP_NAME=LightCommit
NEXT_PUBLIC_API_URL=http://localhost:3000

# API 密钥（如果需要）
GITHUB_API_TOKEN=your_github_token_here
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
ETHERSCAN_API_KEY=your_etherscan_api_key_here
JWT_SECRET=your_jwt_secret_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# IPFS Configuration
IPFS_API_URL=your_ipfs_api_url
IPFS_API_KEY=your_ipfs_api_key
IPFS_SECRET_KEY=your_ipfs_secret_key